{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx", // Enable JSX for React
    "esModuleInterop": true, // Fix module interop warning
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "src", // Help Jest resolve imports
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
