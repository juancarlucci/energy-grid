{
  "name": "energy-grid",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./src/output.css",
    "dev:css": "tailwindcss -i ./src/styles/global.css -o ./src/output.css --watch",
    "dev": "npm run build:css && vite",
    "build": "npm run build:css && vite build && npm run compress",
    "compress": "gzip -9 -k dist/**/*.{js,css,html,svg}",
    "deploy": "npm run build && gh-pages -d dist",
    "preview": "vite preview",
    "server": "node server.cjs",
    "lint": "eslint .",
    "start": "npm run server",
    "test": "jest --silent"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.21",
    "@types/node": "^22.13.10",
    "chart.js": "^4.4.8",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "compression": "^1.8.0",
    "graphql": "^16.10.0",
    "graphql-ws": "^5.14.3",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.13.5",
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss": "^4.0.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/ws": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.39.0",
    "ts-jest": "^29.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-compression": "^0.5.1"
  }
}
